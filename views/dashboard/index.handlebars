<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h1>{{title}}</h1>
      {{#if user}}
        <a href="/profile">
          Signed in as {{user.profile.firstName}} {{user.profile.lastName}}
        </a>
      {{/if}}
      {{#if user}}
        <a href="/logout">Sign out</a>
      {{else}}
        <a href="/login">Sign in</a>
      {{/if}}
      
    </header>
    <main>
    <h2>{{user.profile.firstName}}'s Dashboard</h2>

<p>Profile info</p>
<dl>
  {{#each descriptionList}}
    <dt>{{this.term}}</dt>
    <dd>{{this.details}}</dd>
  {{/each}}
</dl>
      {{{body}}}
    </main>
  </body>
</html>





